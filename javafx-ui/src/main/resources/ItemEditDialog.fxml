<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" styleClass="background" stylesheets="@rootStyle.css"
            xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.kpfu.itis.controller.ItemEditDialogController">
    <BorderPane AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
        <center>
            <GridPane alignment="CENTER" hgap="30.0" prefHeight="233.0" prefWidth="578.0" vgap="11.0"
                      BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="286.0" minWidth="10.0"
                                       prefWidth="216.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="459.0" minWidth="10.0" prefWidth="372.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="35.0" minHeight="30.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="35.0" minHeight="30.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="35.0" minHeight="30.0" prefHeight="35.0" valignment="CENTER"/>
                </rowConstraints>
                <padding>
                    <Insets bottom="100.0"/>
                </padding>
                <Label fx:id="nameLabel" alignment="CENTER" text="Name" textAlignment="CENTER"
                       GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                <Label fx:id="priceLabel" text="Price" GridPane.rowIndex="2"/>
                <TextField fx:id="nameField" maxWidth="-Infinity" prefHeight="27.0" prefWidth="180.0"
                           promptText="Enter a new name ..." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="priceField" maxWidth="-Infinity" prefHeight="27.0" prefWidth="180.0"
                           promptText="Enter a new price ..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="IDLabel" contentDisplay="CENTER" text="ID"/>
                <Text fx:id="idText" fill="#d3b910" strokeType="OUTSIDE" strokeWidth="0.0" text="1"
                      GridPane.columnIndex="1">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
            </GridPane>
        </center>
        <bottom>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Save" BorderPane.alignment="BASELINE_CENTER">
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
            </Button>
        </bottom>
    </BorderPane>
</AnchorPane>
